{
    "files.associations": {
        ".clang-format": "yaml",
        "*.toml": "toml",
        "*.ahk": "ahk2",
        ".clangd": "yaml",
        ".clang-tidy": "yaml",
        ".clang": "yaml",
        "Kconfig": "kconfig",
        ".ccls": "yaml",
        "*.build": "makefile",
        "*.bak": "Log",
        "*.cmake": "cmake",
        "*.ld": "linkerscript",
        "usart.h": "c",
        "sys.h": "c"
    },
    "cmake.sourceDirectory": "/home/doit/stm32_gcc_template-master/projects/demo",
    "clangd.detectExtensionConflicts": true,
    "clangd.arguments": [
        // compile-commands.json文件所在路径
        "--compile-commands-dir=${workspaceFolder}/build",
        // 如果没有加入头文件, 而使用了相关函数, 那么会自动插入头文件, 设置成never那么不自动插入
        "--header-insertion=never",
        // 同时开启的任务数量
        "-j=12",
        // 全局补全（会自动补充头文件）
        "--all-scopes-completion",
        // 更详细的补全内容
        "--completion-style=detailed",
        // 更详细的补全内容
        "--completion-style=detailed",
        // 在后台自动分析文件（基于complie_commands)
        "--background-index",
        // 对所编写代码进行一个静态分析, 查查有什么错误, 不规范的写法
        "--clang-tidy",
        // pch 优化的位置
        "--pch-storage=disk"
    ],
    "clangd.serverCompletionRanking": true,
    "cmake.configureOnOpen": true,
    "search.exclude": {
        // "**/.git": true,
        "**/*.md": true,
        "build": true,
        ".cache": true,
    },
}
